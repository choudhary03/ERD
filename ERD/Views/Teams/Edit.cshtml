@model Refreshment_Dashboard.Models.Team

@{
    ViewData["Title"] = "Edit";
    var activityListItem = ViewBag.TypeDropDown;
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />

<form method ="post">
  <br />
  
    <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
  </div>
   <div class="form-group">
                <label asp-for="MaxLimit" class="control-label"></label>
                <input asp-for="MaxLimit" class="form-control" />
                <span asp-validation-for="MaxLimit" class="text-danger"></span>
  </div>
       <br />
       <br />
       <select asp-for ="ActivityID">
           <option selected>--Choose Activity--</option>
            @foreach (var item in activityListItem)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
       </select>
       <br />
       <br />

   <button type ="submit" class= "btn btn-primary">
       Edit
   </button>

    <p style = "color:red;">
           @Html.Label("",Convert.ToString((string)ViewBag.Error))
       </p> 
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>