@model IEnumerable<ERD.ViewModels.EnrollmentDetailViewModel>

@{
    ViewData["Title"] = "Index";
}
@if (SignInManager.IsSignedIn(User))
{
<Center><h1>Employee Enrollment Details</h1></Center>

<p>
    <a class="nav-link" asp-area="" asp-controller="Enrollments" asp-action="Index">Enroll An Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>Employee Name</th>
                <th>Activities Enrolled</th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
            var activityNameList = "";   
            <tr>
            <td>@item.employees.Firstname</td>
            @if(item.activityList.Count > 0)
            {
                    activityNameList = string.Join(" , ", item.activityList.Select(x => x.Name));
                }
            <td>@activityNameList</td>
        </tr>
}
    </tbody>
</table>
}
else
{
<li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
   
}