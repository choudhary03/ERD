@model Refreshment_Dashboard.Models.Booking

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var venueListItem = ViewBag.venueDropDown;
    var activityListItem = ViewBag.activityDropDown;
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<form method="post">
    <br />

    <select asp-for="VenueID">
        <option selected>--Choose Venue--</option>
        @foreach (var item in venueListItem)
        {
            <option value="@item.ID">@item.Name</option>
        }
    </select>
    <br />
    <br />
    <select asp-for="ActivityID">
        <option selected>--Select Activity--</option>
        @foreach (var item in activityListItem)
        {
            <option value="@item.ID">@item.Name</option>
        }
    </select>
    <br />
    <br />
    <div class="form-group">
        <label asp-for="BookedOn" class="control-label"></label>
        <input asp-for="BookedOn" class="form-control" />
        <span asp-validation-for="BookedOn" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="MatchFix" class="control-label"></label>
        <input asp-for="MatchFix" class="form-control" />
        <span asp-validation-for="MatchFix" class="text-danger"></span>
    </div>
    <br />
    <br />

   @* <button type="submit" id="button" class="btn btn-primary">
        Create
    </button>*@
    <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

    <p style="color:red;">
        @Html.Label("",Convert.ToString((string)ViewBag.Error))
    </p>

    <p style="color:red;">
        @Html.Label("",Convert.ToString((string)ViewBag.OverlimitError))
    </p>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{
    <script>
$(document).ready(function(){
  $("#ActivityID").change(function(){
    var selectedIds = $(this).val();
      $.ajax({url: '@Url.Action("GetVenueList" , "Bookings")', type:"post", data:{id:selectedIds} ,success: function(result){
      if(result != null)
      {
          $("#VenueID").empty();
            $.each(result, function (i,value) {
                $("#VenueID").append($("<option></option>").val(value.value).html(value.text));
            });
      }
    }});
  });
});
</script>
}
